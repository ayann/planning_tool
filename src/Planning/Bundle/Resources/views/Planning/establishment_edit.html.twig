{% extends 'PlanningBundle::layout.html.twig' %}

{% block title %}Insta | Gestion des établissements{% endblock %}

{% block localisation %}
    Gestion des établissements
{% endblock %}

{% block ariane %}
    <span class="active"><i class="fa fa-home"></i><a href="">Home</a></span>/ Modifier un établissements
{% endblock %}

{% block main_content %}
    <div class="row">
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 center-box">
            <div class="well white_well animated zoomIn">
                {% if form is defined %}
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        {{ form_errors(form) }}

                        <div class="form-group">
                            {{ form_label(form.address, "Adresse de l'établissement", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                            {{ form_errors(form.address) }}

                            <div class="col-sm-9">
                                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.phone, "Numéro de téléphone", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                            {{ form_errors(form.phone) }}

                            <div class="col-sm-9">
                                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email, "Adresse email", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                            {{ form_errors(form.email) }}

                            <div class="col-sm-9">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.subwayLine, "Ligne de metro", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                            {{ form_errors(form.subwayLine) }}

                            <div class="col-sm-9">
                                {{ form_widget(form.subwayLine, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        {{ form_widget(form.save, {'attr': {'class': 'btn-edit btn btn-primary btn-green'}, 'label': 'Modifier' }) }}
                        
                        {{ form_rest(form) }}
                    {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock main_content %}
