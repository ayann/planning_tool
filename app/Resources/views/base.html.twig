    </head>
    <body>
        {% block body %}{% endblock %}
        
        {% block javascripts %}
            <script type="text/javascript">
                jQuery(document).ready(function($) {
                    $('#table_id').DataTable({
                        "oLanguage": {
                            "sUrl": "{{ asset('bundles/layouts/js/datatables_french.json') }}"
                        }
                    });
                });
            </script>
        {% endblock %}
    </body>
